@model Cloudzy.Models.ViewModels.UserProfile.EditViewModel

@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm text-center p-4">
                    <div class="profile-image-container mx-auto mb-3">
                        @if (!string.IsNullOrEmpty(Model.ExistingImg))
                        {
                            <img src="@Model.ExistingImg" alt="Profile" class="rounded-circle profile-image" />
                        }
                        else
                        {
                            <img src="~/images/placeholder-profile.png" alt="Profile" class="rounded-circle profile-image" />
                        }
                    </div>
                    <h5 class="mb-1">@Model.Fullname</h5>
                    <p class="text-muted small mb-1">@Model.Email</p>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card border-0 shadow-sm p-4">
                    <h4 class="mb-4">Thông tin cá nhân</h4>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên</label>
                        <p>@Model.Fullname</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <p>@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Số điện thoại</label>
                        <p>@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Chưa cập nhật" : Model.PhoneNumber)</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">Địa chỉ</label>
                        <p>@(string.IsNullOrEmpty(Model.Address) ? "Chưa cập nhật" : Model.Address)</p>
                    </div>
                    <div class="text-center">
                        <a asp-action="Edit" class="btn btn-primary px-4">
                            Sửa thông tin
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card border-0 shadow-sm p-4">
                    <h5 class="mb-3">Danh mục</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item px-0 py-2 border-0 active">
                            <a asp-action="Profile" class="text-decoration-none text-dark">
                                <i class="fas fa-user text-primary me-2"></i>
                                Tài khoản của tôi
                            </a>
                        </li>
                        <li class="list-group-item px-0 py-2 border-0">
                            <a asp-action="ChangePassword" class="text-decoration-none text-dark">
                                <i class="fas fa-key text-secondary me-2"></i>
                                Đổi mật khẩu
                            </a>
                        </li>
                        <li class="list-group-item px-0 py-2 border-0">
                            <a asp-controller="MyOrder" asp-action="MyOrders" class="text-decoration-none text-dark">
                                <i class="fas fa-shopping-bag text-secondary me-2"></i>
                                Đơn mua
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>