@model Cloudzy.Models.ViewModels.AdminProduct.EditViewModel

@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa sản phẩm</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductId" />

    <div class="row">
        <div class="mb-3 col-lg-6">
            <label asp-for="ProductName" class="form-label">Tên sản phẩm</label>
            <input asp-for="ProductName" class="form-control" required />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="CategoryId" class="form-label">Danh mục</label>
            <select asp-for="CategoryId" asp-items="Model.Category" class="form-control" required>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="BrandId" class="form-label">Nhãn hàng</label>
            <select asp-for="BrandId" asp-items="Model.Brand" class="form-control" required>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="SupplierId" class="form-label">Nhà cung cấp</label>
            <select asp-for="SupplierId" asp-items="Model.Supplier" class="form-control" required>
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-4">
            <label asp-for="Material" class="form-label">Chất liệu</label>
            <input asp-for="Material" class="form-control" required />
            <span asp-validation-for="Material" class="text-danger"></span>
        </div>


        <div class="mb-3 col-lg-4">
            <label asp-for="Price" class="form-label">Giá gốc</label>
            <input asp-for="Price" type="number" class="form-control" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-4">
            <label asp-for="DiscountPrice" class="form-label">Giá khuyến mãi</label>
            <input asp-for="DiscountPrice" type="number" class="form-control" required />
            <span asp-validation-for="DiscountPrice" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-8">
            <label asp-for="ProductDescription" class="form-label">Mô tả</label>
            <input asp-for="ProductDescription" type="text" class="form-control" required />
            <span asp-validation-for="ProductDescription" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-4">
            <label asp-for="NewImages" class="form-label">Thêm ảnh mới (tùy chọn)</label>
            <input asp-for="NewImages" type="file" class="form-control" />
            <span asp-validation-for="NewImages" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Hình ảnh hiện tại</label>
            <div class="row">
                @foreach (var img in Model.CurrentImages)
                {
                    <div class="col-md-2 text-center">
                        <img src="@img" class="img-thumbnail" style="width: 100px; height: 100px;" />
                        <br />
                        <input type="checkbox" name="CurrentImages" value="@img" checked /> Giữ lại
                    </div>
                }
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-warning mt-3">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}