@model Cloudzy.Models.ViewModels.Cart.CartItemCreateViewModel
@{
    ViewData["Title"] = "Thêm chi tiết mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Thêm chi tiết</h2>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="CartId" value="@ViewBag.CartId" />
    <div class="row">
        <div class="mb-3 col-lg-3">
            <label asp-for="VariantId" class="form-label">Chi tiết sản phẩm</label>
            <input asp-for="VariantId" type="number" class="form-control" />
            <span asp-validation-for="VariantId" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-3">
            <label asp-for="Quantity" class="form-label">Số lượng</label>
            <input asp-for="Quantity" type="number" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Thêm chi tiết</button>
    <a asp-action="Index" asp-route-cartId="@Model.CartId" class="btn btn-secondary mt-3">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}