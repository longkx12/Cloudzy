@using X.PagedList
@using X.PagedList.Mvc.Core

@model IPagedList<Cloudzy.Models.ViewModels.AdminOrder.ListViewModel>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Mã đơn</th>
                <th>SDT</th>
                <th>Email</th>
                <th>Ngày đặt</th>
                <th>Mã voucher</th>
                <th>Hình thức thanh toán</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.STT</td>
                    <td>@order.OrderId</td>
                    <td>@order.PhoneNumber</td>
                    <td>@order.Email</td>
                    <td>@order.CreatedAt</td>
                    <td>@order.VoucherCode</td>
                    <td>@order.PaymentMethod</td>
                    <td>@order.Status</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a href="@Url.Action("Index", "AdminOrderDetail", new { id = order.OrderId })" class="btn btn-info">Xem</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Phân trang bằng AJAX -->
    <div class="text-center d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model, page => "javascript:load(" + page + ")", new PagedListRenderOptions
   {
       LiElementClasses = new[] { "page-item" },
       PageClasses = new[] { "page-link" }
   })
    </div>
</div>
