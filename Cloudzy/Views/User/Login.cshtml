@model Cloudzy.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutLI_LO.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/LayoutAdmin/assets/images/logo_cloudzy.svg" alt="logo" />
                        </div>
                        <h4>Xin chào! Chúng ta hãy bắt đầu nhé</h4>
                        <h6 class="fw-light">Đăng nhập để tiếp tục.</h6>
                        <form asp-action="Login" method="post" class="pt-3">
                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email:</label>
                                <input asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" maxlength="1000" placeholder="Nhập email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">Mật khẩu:</label>
                                <input asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" maxlength="500" placeholder="Mật khẩu" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mt-3 d-grid gap-2">
                                <button type="submit" class="btn btn-block btn-primary btn-lg fw-medium auth-form-btn">Đăng nhập</button>
                            </div>
                            <div class="my-2 d-flex justify-content-between align-items-center">
                                <div class="form-check">
                                    <label asp-for="RememberMe" class="form-check-label text-muted">
                                        <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                                        Ghi nhớ đăng nhập
                                    </label>
                                </div>
                                <a href="@Url.Action("ForgotPassword","User")" class="auth-link text-black">Quên mật khẩu?</a>
                            </div>
                            <div class="mb-2 d-grid gap-2">
                                <a href="@Url.Action("GoogleLogin", "User")"
                                        class="btn btn-block btn-google auth-form-btn">
                                    <i class="ti-google me-2"></i>Tiếp tục với Google
                                </a>
                            </div>
                            <div class="text-center mt-4 fw-light">
                                Bạn chưa có tài khoản?
                                <a href="@Url.Action("Register","User")"
                                   class="text-primary">Đăng ký</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>