@model Cloudzy.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = "~/Views/Shared/_LayoutLI_LO.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <h4>Đặt lại mật khẩu</h4>

                        <form asp-action="ResetPassword" method="post" class="pt-3">
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Token" />

                            <div class="form-group">
                                <label asp-for="NewPassword">Mật khẩu mới:</label>
                                <input asp-for="NewPassword" type="password" class="form-control form-control-lg" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Nhập lại mật khẩu:</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="mt-3 d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg auth-form-btn">Đặt lại mật khẩu</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
