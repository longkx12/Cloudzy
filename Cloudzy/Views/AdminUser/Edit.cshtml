@model Cloudzy.Models.ViewModels.AdminUser.EditViewModel

@{
    ViewData["Title"] = "Sửa tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa tài khoản</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="row">
        <div class="mb-3 col-lg-6">
            <label asp-for="Fullname" class="form-label">Họ Tên</label>
            <input asp-for="Fullname" class="form-control" required />
            <span asp-validation-for="Fullname" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" maxlength="1000" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-4">
            <label asp-for="PhoneNumber" class="form-label">Số Điện Thoại</label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-4">
            <label asp-for="Address" class="form-label">Địa Chỉ</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-4">
            <label asp-for="RoleId" class="form-label">Quyền</label>
            <select asp-for="RoleId" asp-items="Model.Roles" class="form-control" required>
            </select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-warning mt-3">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}