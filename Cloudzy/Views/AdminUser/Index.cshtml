@model IEnumerable<Cloudzy.Models.ViewModels.AdminUser.UserListViewModel>

@{
    ViewData["Title"] = "Quản lý tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách tài khoản</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

<a class="btn btn-primary mb-3" asp-action="Create">Thêm tài khoản</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>STT</th>
            <th>Email</th>
            <th>Họ Tên</th>
            <th>Số Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Quyền</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.STT</td>
                <td>@user.Email</td>
                <td>@user.Fullname</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Address</td>
                <td>@user.RoleName</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.STT">Sửa</a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@user.STT" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Bạn có chắc muốn xóa tài khoản này?');">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>