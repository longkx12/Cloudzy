@model Cloudzy.Models.ViewModels.AdminCategory.CreateViewModel

@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm danh mục</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Tên danh mục</label>
            <input asp-for="CategoryName" class="form-control" maxlength="100" />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Thêm danh mục</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}