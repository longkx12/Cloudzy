@model Cloudzy.Models.ViewModels.AdminBrand.EditViewModel

@{
    ViewData["Title"] = "Sửa nhãn hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa nhãn hàng</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="BrandId" />

    <div class="row">
        <div class="mb-3">
            <label asp-for="BrandName" class="form-label">Tên nhãn hàng</label>
            <input asp-for="BrandName" class="form-control" maxlength="100" required />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BrandImg" class="form-label">Ảnh</label>
            <input asp-for="BrandImg" type="file" class="form-control" accept="image/*" />
            @if (!string.IsNullOrEmpty(Model.ExistingImg))
            {
                <div>
                    <img src="@Model.ExistingImg" style="width: 100px; height: auto; margin-top: 10px" />
                </div>
            }
            <span asp-validation-for="BrandImg" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <input asp-for="Description" type="text" class="form-control" required />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-warning mt-3">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}