@model IEnumerable<Cloudzy.Models.Domain.Order>
@{
    ViewData["Title"] = "Quản lý giao hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Danh sách đơn hàng cần giao</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Hiện tại không có đơn hàng nào cần giao.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Người nhận</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Hình thức thanh toán</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>#@order.OrderId</td>
                            <td>@order.User?.Fullname</td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@order.TotalPrice.ToString("N0") đ</td>
                            <td>
                                @if (order.PaymentMethod == "COD")
                                {
                                    <span>Thanh toán khi nhận hàng</span>
                                }
                                else
                                {
                                    <span>@order.PaymentMethod</span>
                                }
                            </td>
                            <td>
                                <span class="badge bg-info">Đang xử lý</span>
                            </td>
                            <td>
                                <a href="@Url.Action("OrderDetails", "Shipper", new { id = order.OrderId })" class="btn btn-primary btn-sm">
                                    <i class="fas fa-eye"></i> Xem chi tiết
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Hiển thị thông báo nếu có
            if ('@TempData["SuccessMessage"]' != '') {
                toastr.success('@TempData["SuccessMessage"]');
            }
            if ('@TempData["ErrorMessage"]' != '') {
                toastr.error('@TempData["ErrorMessage"]');
            }
        });
    </script>
}