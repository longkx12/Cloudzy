@model Cloudzy.Models.ViewModels.AdminSupplier.EditViewModel

@{
    ViewData["Title"] = "Sửa nhà cung cấp";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa nhà cung cấp</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SupplierId" />

    <div class="row">
        <div class="mb-3 col-lg-6">
            <label asp-for="SupplierName" class="form-label">Tên nhà cung cấp</label>
            <input asp-for="SupplierName" class="form-control" required />
            <span asp-validation-for="SupplierName" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="PhoneNumber" class="form-label">Số điện thoại</label>
            <input asp-for="PhoneNumber" class="form-control" required />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="Address" class="form-label">Địa chỉ</label>
            <input asp-for="Address" class="form-control" required />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-warning mt-3">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}