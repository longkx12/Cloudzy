@model Cloudzy.Models.ViewModels.AdminImportDetail.CreateViewModel
@{
    ViewData["Title"] = "Thêm chi tiết mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Thêm chi tiết</h2>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="ImportId" value="@ViewBag.ImportId" />
    <div class="row">
        <div class="mb-3 col-lg-6">
            <label asp-for="ProductId" class="form-label">Tên sản phẩm</label>
            <select asp-for="ProductId" asp-items="Model.Product" class="form-control">
                <option value="">-- Chọn sản phẩm --</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-3">
            <label asp-for="Quantity" class="form-label">Số lượng</label>
            <input asp-for="Quantity" type="number" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="mb-3 col-lg-3">
            <label asp-for="Price" class="form-label">Giá</label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Thêm chi tiết</button>
    <a asp-action="Index" asp-route-importId="@Model.ImportId" class="btn btn-secondary mt-3">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}