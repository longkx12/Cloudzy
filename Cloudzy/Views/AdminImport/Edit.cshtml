@model Cloudzy.Models.ViewModels.AdminImport.EditViewModel

@{
    ViewData["Title"] = "Sửa nhập hàng";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chỉnh sửa nhập hàng</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SupplierId" />

    <div class="row">
        <div class="mb-3 col-lg-6">
            <label asp-for="SupplierId" class="form-label">Tên nhà cung cấp</label>
            <select asp-for="SupplierId" asp-items="Model.Supplier" class="form-control">
                <option value="">-- Chọn nhà cung cấp --</option>
            </select>
            <span asp-validation-for="SupplierId" class="text-danger"></span>
        </div>

        <div class="mb-3 col-lg-6">
            <label asp-for="ImportDate" class="form-label">Ngày nhập</label>
            <input asp-for="ImportDate" type="datetime-local" class="form-control"
                   value="@Model.ImportDate.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="ImportDate" class="text-danger"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-warning mt-3">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Quay lại</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}